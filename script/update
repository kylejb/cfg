#!/bin/sh -e

run_updates() {
    # find all update files and run them iteratively
    find . -name update.sh | while read -r updater; do sh -c "${updater}"; done
}

# TODO: Script to dynamically update all packages/dependencies based on OS with one command

# Update App Store apps
softwareupdate -i -a

# Update Homebrew (Cask) & packages
su admin -c 'brew update && brew upgrade && brew cleanup'

run_updates
