[core]
	editor = code --wait
	ignorecase = false
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[user]
	name = Kyle J. Burda
	email = kburda@symphonysensa.com
	signingkey = FAE7464507534DE7
[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[alias]
	adog = log --all --decorate --oneline --graph
[init]
	defaultBranch = main
[rebase]
	instructionFormat = %s [%an] # add commit author to the end of each line
[commit]
	gpgsign = true
[push]
	default = current
